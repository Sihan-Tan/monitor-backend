{
  "root": true,
  "include": ["src/**/*.ts"],
  "exclude": ["gulpfile.js", "*.json"],
  "compileOnSave": true,
  "strict": true,
  "compilerOptions": {
    "lib": ["ES2015", "es6", "es7"],
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@*": ["src/*"]
    },
    "types": ["node"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./typings"],
    "esModuleInterop": true
  }
}
